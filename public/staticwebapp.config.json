{
  "platform": {
    "apiRuntime": "node:16"
  },
  "routes": [
    {
      "route": "/favicon.ico"
    },
    {
      "route": "/build/*"
    },
    {
      "route": "/.auth/login/twitter",
      "statusCode": 404
    },
    {
      "route": "/.auth/*"
    },
    {
      "route": "/login",
      "redirect": "/.auth/login/aad?post_login_redirect_uri=https://green-river-0f8b1ea1e-preview.westus2.1.azurestaticapps.net/profile"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout"
    },
    {
      "route": "/purge",
      "redirect": "/.auth/purge/aad"
    },
    {
      "route": "/identity",
      "redirect": "/.auth/me"
    },
    {
      "route": "/profile",
      "rewrite": "/api/request-handler",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/*",
      "rewrite": "/api/request-handler"
    }
  ],
  "auth": {
    "identityProviders": {
      "azureActiveDirectory": {
        "registration": {
          "openIdIssuer": "https://login.microsoftonline.com/39deb1c1-2c7a-4802-b579-c1cc24d3fd53/v2.0",
          "clientIdSettingName": "AZURE_CLIENT_ID",
          "clientSecretSettingName": "AZURE_CLIENT_SECRET"
        }
      }
    }
  }
}
