{
  "platform": {
    "apiRuntime": "node:16"
  },
  "routes": [
    {
      "route": "/favicon.ico"
    },
    {
      "route": "/build/*"
    },
    {
      "route": "/.auth/login/twitter",
      "statusCode": 404
    },
    {
      "route": "/.auth/*"
    },
    {
      "route": "/login",
      "redirect": "/.auth/login/aad"
    },
    {
      "route": "/profile",
      "rewrite": "/api/request-handler",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/*",
      "rewrite": "/api/request-handler"
    }
  ]
}
