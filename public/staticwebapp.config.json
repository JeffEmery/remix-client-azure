{
  "platform": {
    "apiRuntime": "node:16"
  },
  "routes": [
    {
      "route": "/favicon.ico"
    },
    {
      "route": "/privacy.html"
    },
    {
      "route": "/terms.html"
    },
    {
      "route": "/build/*"
    },
    {
      "route": "/.auth/login/twitter",
      "statusCode": 404
    },
    {
      "route": "/.auth/*"
    },
    {
      "route": "/login",
      "redirect": "/.auth/login/aadb2c"
    },
    {
      "route": "/logout",
      "redirect": "/.auth/logout"
    },
    {
      "route": "/purge",
      "redirect": "/.auth/purge/aadb2c"
    },
    {
      "route": "/identity",
      "redirect": "/.auth/me"
    },
    {
      "route": "/profile",
      "rewrite": "/api/request-handler",
      "allowedRoles": ["authenticated"]
    },
    {
      "route": "/*",
      "rewrite": "/api/request-handler"
    }
  ],
  "auth": {
    "identityProviders": {
      "customOpenIdConnectProviders": {
        "aadb2c": {
          "registration": {
            "clientIdSettingName": "AADB2C_PROVIDER_CLIENT_ID",
            "clientCredential": {
              "clientSecretSettingName": "AADB2C_PROVIDER_CLIENT_SECRET"
            },
            "openIdConnectConfiguration": {
              "wellKnownOpenIdConfiguration": "https://envisionpartner.b2clogin.com/envisionpartner.onmicrosoft.com/B2C_1_swa_signupsignin/v2.0/.well-known/openid-configuration"
            }
          },
          "login": {
            "nameClaimType": "http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name",
            "scopes": ["openid", "email", "profile", "phone"],
            "loginParameterNames": []
          }
        }
      }
    }
  }
}
